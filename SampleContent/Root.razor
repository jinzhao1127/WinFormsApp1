<header>
    <nav>
        <NavLink href="" Match="NavLinkMatch.All">Basics</NavLink>
        <NavLink href="navigation">Navigation</NavLink>
        <NavLink href="errors">Errors</NavLink>
    </nav>
</header>

<main>
    <Router AppAssembly="@typeof(Root).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" />
            <FocusOnNavigate RouteData="@routeData" Selector="h2" />
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <p role="alert">Sorry, there's nothing at this address.</p>
        </NotFound>
    </Router>
</main>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
